{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "next",
    "^@[a-zA-Z](.*)$",
    "^[a-zA-Z](.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.yml"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
