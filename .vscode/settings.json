{
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[mdx]": {
    "editor.formatOnSave": false,
    "editor.rulers": [
      {
        "column": 80
      }
    ]
  }
}